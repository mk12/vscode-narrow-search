{
    "name": "narrow-search",
    "version": "0.2.0",
    "displayName": "Narrow Search",
    "description": "Provides a command to narrow searches",
    "publisher": "mk12",
    "license": "MIT",
    "homepage": "https://github.com/mk12/vscode-narrow-search",
    "repository": {
        "type": "git",
        "url": "https://github.com/mk12/vscode-narrow-search.git"
    },
    "icon": "icon.png",
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "engines": {
        "vscode": "^1.72.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "activationEvents": [],
    "contributes": {
        "commands": [
            {
                "command": "narrowSearch.narrowSearchToCurrentDirectory",
                "title": "Narrow Search: Current Directory"
            },
            {
                "command": "narrowSearch.narrowSearchChoosePreset",
                "title": "Narrow Search: Choose Preset"
            }
        ],
        "configuration": {
            "title": "Narrow Search",
            "properties": {
                "narrowSearch.presets": {
                    "type": "array",
                    "description": "Each preset has a key and a value. The key is the preset's name. The value gets put in the Search view's \"files to include\" field when you select the preset.",
                    "items": {
                        "type": "string",
                        "description": "Foobar"
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./",
        "lint": "eslint --fix src/**/*.ts"
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/vscode": "^1.72.0",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "@vscode/test-electron": "^2.1.5",
        "esbuild": "^0.20.2",
        "eslint": "^8.24.0",
        "typescript": "^4.8.4"
    }
}
